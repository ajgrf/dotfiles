[user]
	name = Alex Griffin
	email = a@ajgrf.com
[core]
	excludesFile = ~/.gitignore_global
	longpaths = true
[alias]
	br = branch
	ci = commit --verbose
	co = checkout
	com = commit --verbose
	log1 = log --format=format:'%ad %h%d %s' --date=short
	ls = ls-files
	st = status --short --branch
	unmerged = log --format=format:'%ad %h%d %s' --date=short ^@{upstream} @
	unpulled = log --format=format:'%ad %h%d %s' --date=short ^@ @{upstream}
[color]
	ui = false
[log]
	decorate = short
[push]
	default = simple
[gitlab]
	user = ajgrf
[github]
	user = ajgrf
