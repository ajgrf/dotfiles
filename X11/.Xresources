! ~/.Xresources

!! terminal color scheme
*background:             #ffffea
*foreground:             #000000

! black
*color0:                 #000000
*color8:                 #000000
! red
*color1:                 #880000
*color9:                 #880000
! green
*color2:                 #004d00
*color10:                #004d00
! yellow
*color3:                 #eeee9e
*color11:                #eeee9e
! blue
*color4:                 #004488
*color12:                #004488
! magenta
*color5:                 #770077
*color13:                #770077
! cyan
*color6:                 #eaffff
*color14:                #eaffff
! white
*color7:                 #ffffea
*color15:                #ffffea

!! URxvt settings
URxvt*font:              xft:Go Mono:size=11,\
                         xft:WenQuanYi Micro Hei Mono:size=11
URxvt*boldFont:          xft:Go Mono:bold:size=11,\
                         xft:WenQuanYi Micro Hei Mono:bold:size=11
URxvt*italicFont:        xft:Go Mono:italic:size=11,\
                         xft:WenQuanYi Micro Hei Mono:italic:size=11
URxvt*boldItalicFont:    xft:Go Mono:bold:italic:size=11,\
                         xft:WenQuanYi Micro Hei Mono:bold:italic:size=11
URxvt*iconName:          Terminal
URxvt*inputMethod:       ibus
URxvt*iso14755:          false
URxvt*iso14755_52:       false
URxvt*keysym.C-M-c:      builtin-string:
URxvt*keysym.C-M-v:      builtin-string:
URxvt*keysym.C-S-0x43:   eval:selection_to_clipboard
URxvt*keysym.C-S-0x56:   eval:paste_clipboard
!URxvt*keysym.C-Tab:      [27;5;9~
!URxvt*keysym.S-C-Tab:    [27;6;9~
URxvt*matcher.button:    1
URxvt*perl-ext:          matcher
URxvt*saveLines:         10000
URxvt*scrollBar:         false
URxvt*scrollTtyKeypress: true
URxvt*scrollWithBuffer:  true
URxvt*scrollTtyOutput:   false
URxvt*termname:          rxvt-unicode
URxvt*title:             Terminal
URxvt*urlLauncher:       firefox
URxvt*urgentOnBell:      true

!! XTerm settings
xterm*dynamicColors:     true
xterm*eightBitInput:     false
xterm*faceName:          Go Mono:size=11
xterm*faceNameDoublesize:WenQuanYi Micro Hei Mono:size=11
xterm*iconName:          Terminal
xterm*saveLines:         10000
xterm*scrollKey:         true
xterm*scrollTtyOutput:   false
*vt100.translations: #override \n\
	Ctrl ~Shift <Key>Tab: string(0x1b) string("[27;5;9~") \n \
	Ctrl Shift <Key>Tab: string(0x1b) string("[27;6;9~") \n
