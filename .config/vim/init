" $XDG_CONFIG_HOME/vim/init: initialization file for vim
" to use this config, set the VIMINIT environment variable
"     export VIMINIT="source ${XDG_CONFIG_HOME:-$HOME/.config}/vim/init"
" the odd layout of this file is to avoid blowing up if vim lacks eval support

if v:progname != "vi"
  " set up runtime, directories, etc. before calling our real vimrc
  if empty($XDG_CONFIG_HOME)
    let $XDG_CONFIG_HOME = expand('$HOME/.config')
  endif
  if empty($XDG_DATA_HOME)
    let $XDG_DATA_HOME = expand('$HOME/.local/share')
  endif
  if empty($XDG_CACHE_HOME)
    let $XDG_CACHE_HOME = expand('$HOME/.cache')
  endif
  set runtimepath+=$XDG_CONFIG_HOME/vim
  runtime bundle/pathogen/autoload/pathogen.vim
  source $XDG_CONFIG_HOME/vim/config
  finish
endif

" act like traditional vi if run as vi or without eval support
set compatible
set shortmess+=I
set viminfo=
