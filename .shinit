export GPG_TTY=$(tty)

alias ls='LC_COLLATE=C ls --color=auto -A -1'
alias lc='LC_COLLATE=C command ls --color=auto -A'
alias l='lc'
alias la='ls'
alias ll='ls -la'
alias lh='ll -h'

alias doch='eval sudo $(fc -ln -1)'
alias dot='git --git-dir="$HOME/.dot" --work-tree="$HOME"'
alias emacs='emacs -nw'
alias nixos-rebuild='sudo env NIXOS_CONFIG="$XDG_CONFIG_HOME/nixpkgs/$HOSTNAME.nix" nixos-rebuild'

# XDG Base Directories
alias abcde='abcde -c "$XDG_CONFIG_HOME/abcde.conf"'
alias tmux='tmux -f $XDG_CONFIG_HOME/tmux/tmux.conf'

# pretty print working directory
ppwd() {
	local dir="${PWD}/" n="${1:-255}"

	case "$dir" in
	"${HOME}/"*)
		dir="~/${dir#$HOME/}"
		;;
	esac
	dir="${dir%/}"

	if test "${#dir}" -gt "$n"; then
		n=$(( n - 3 ))
		while test "${#dir}" -gt "$n"; do
			dir="${dir#?}"
		done
		dir="...${dir}"
	fi

	echo "$dir"
}

prompt() {
	local e=$? env="" S='$'
	test "$e" -eq 0 && e=""
	test "${USER_ID:=$(id -u)}" -eq 0 && S='#'

	if type git >/dev/null 2>&1; then
		branch=$(git symbolic-ref --short HEAD 2>/dev/null)
		env="${branch:+($branch)}"
	fi

	echo -n "${e:+$e|}${USER}@${HOSTNAME%%.*}:$(ppwd 28)${env:+ $env}$S "
}
PS1='$(prompt || echo "> ")'

case "$TERM" in
xterm*|rxvt*|st*|screen*|tmux*)
	printf '\e]0;%s\a' "${USER}@${HOSTNAME%%.*} ($0)"
	;;
esac

if test "$INSIDE_EMACS" -a "$INSIDE_EMACS" != vterm; then
	# Disable pagers
	export PAGER=cat
	export MANPAGER=cat
fi
