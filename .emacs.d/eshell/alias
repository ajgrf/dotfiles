alias abcde abcde -c $XDG_CONFIG_HOME/abcde.conf
alias date *date $*
alias doas sudo $*
alias dot vcsh dotfiles $*
alias edit find-file $1
alias feh feh -. -Z -B black -D -10 $*
alias ls ls -A -1 $*
alias lc eshell/ls -A $*
alias l lc $*
alias la ls -a $*
alias ll ls -la $*
alias lh ll -h $*
alias mkcd mkdir $1 && cd $1
alias rg rg --color never --no-heading $*
alias sudo eshell/sudo $*
